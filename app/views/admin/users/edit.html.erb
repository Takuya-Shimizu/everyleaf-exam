<h2>ユーザーを編集する</h2>

<%= form_with(model: [:admin, @user], local: true) do |form| %>
  <% if @user.errors.any? %>
    <div id="error_explanation">
      <h2><%= @user.errors.count %>件のエラーがあります。</h2>
      <ul>

      <% @user.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="user_id">
    <%= form.label :name %>
    <%= form.text_field :name %>
  </div>
    <div class="user_id">
    <%= form.label :管理者権限 %>
    <%= form.check_box :admin %>
  </div>
  <div class="user_id">
    <%= form.label :email %>
    <%= form.email_field :email %>
  </div>
  <div class="user_id">
    <%= form.label :password %>
    <%= form.password_field :password %>
  </div>
  <div class="user_id">
    <%= form.label :password_confirmation %>
    <%= form.password_field :password_confirmation %>
  </div>
    
  <%= form.submit "Edit this account" %>
<% end %>

<br>
<%= link_to "ユーザー一覧画面にもどる", admin_users_path %>