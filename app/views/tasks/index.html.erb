<h1>タスク一覧</h1>

<p><%= notice %></p>

<%= form_with(url: tasks_path, scope: :task, local: true, method: :get) do |form| %>
  <p>タイトル検索: <%= form.text_field :title %>
     ステータス検索: <%= form.select :status, Task.statuses.keys.to_a, include_blank: "選択してください" %>
     ラベルで絞り込む: <%= form.select :label_id, Label.all.collect { |l| [ l.name, l.id ] }, include_blank: true %>
     <%= form.submit '検索', name: nil %>
  </p>
<% end %>
  
<table>
  <tr>
    <th>作成者</th>
    <th>タイトル</th>
    <th>内容</th>
    <th>終了期限</th>
    <th>ステータス</th>
    <th>優先順位</th>
    <th>ラベル</th>
  </tr>

<% @tasks.each do |task| %>
  <tr class="task_row" >
    <td><%= task.user.name %></td>
    <td><%= task.title %></td>
    <td><%= task.content %></td>
    <td><%= task.deadline %></td>
    <td><%= task.status %></td>
    <td><%= task.priority %></td>
    <td>
      <% task.labels.each do |label| %>
        <%= label.name %>
      <% end %>
    </td>
    <td><%= link_to '詳細', task_path(task.id), class: "btn btn-primary" %></td>
    <td><%= link_to '編集', edit_task_path(task.id), class: "btn btn-warning" %></td>
    <td><%= link_to '削除', task_path(task.id), method: :delete, data: { confirm: '本当に削除していいですか？' }, class: "btn btn-danger" %></td>
  </tr>
<% end %>
</table>

<br>
<%= link_to "終了期限でソートする", tasks_path(sort_expired: "true") %>
<%= link_to "優先順位でソートする", tasks_path(sort_priority: "true") %>
<%= link_to 'タスク登録画面へ', new_task_path %>
<%= paginate @tasks %>